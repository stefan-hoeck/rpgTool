<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>nb</artifactId>
    <groupId>efa.mvn</groupId>
    <version>7.1.2</version>
  </parent>

  <groupId>efa</groupId>
  <artifactId>rpg</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>rpg</name>

  <dependencies>
    <dependency>
      <groupId>efa.scala</groupId>
      <artifactId>scalaW</artifactId>
    </dependency>
    <dependency>
      <groupId>efa.scala</groupId>
      <artifactId>scalazW</artifactId>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>    
      <dependency>
        <groupId>efa.scala</groupId>
        <artifactId>scalaW</artifactId>
        <version>2.10.0</version>
      </dependency>
      <dependency>
        <groupId>efa.scala</groupId>
        <artifactId>scalaSwingW</artifactId>
        <version>2.10.0</version>
      </dependency>
      <dependency>
        <groupId>efa.scala</groupId>
        <artifactId>scalazW</artifactId>
        <version>7.0.0-M7</version>
      </dependency>
      <dependency>
        <groupId>efa.scala</groupId>
        <artifactId>scalaCheckW</artifactId>
        <version>1.10.0</version>
      </dependency>

      <dependency>
        <groupId>efa.react</groupId>
        <artifactId>react-core</artifactId>
        <version>${react.version}</version>
      </dependency>
      <dependency>
        <groupId>efa.react</groupId>
        <artifactId>react-swing</artifactId>
        <version>${react.version}</version>
      </dependency>
      <dependency>
        <groupId>efa</groupId>
        <artifactId>efa-core</artifactId>
        <version>${util.version}</version>
      </dependency>
      <dependency>
        <groupId>efa</groupId>
        <artifactId>efa-data</artifactId>
        <version>${util.version}</version>
      </dependency>
      <dependency>
        <groupId>efa</groupId>
        <artifactId>efa-io</artifactId>
        <version>${util.version}</version>
      </dependency>
      <dependency>
        <groupId>efa</groupId>
        <artifactId>efa-nb</artifactId>
        <version>${util.version}</version>
      </dependency>
      <dependency>
        <groupId>org.netbeans.api</groupId>
        <artifactId>org-netbeans-core-multiview</artifactId>
        <version>${netbeans.version}</version>
      </dependency>
    </dependencies>    
  </dependencyManagement>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>nbm-maven-plugin</artifactId>
          <configuration>
            <cluster>rpgTool</cluster>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <modules>
    <module>core</module>
    <module>preferences</module>
    <module>explorer</module>
    <module>items</module>
    <module>describedPanel</module>
    <module>being</module>
    <module>rules</module>
    <module>rulesUI</module>
  </modules>

  <properties>
    <util.version>0.2.0-SNAPSHOT</util.version>
    <react.version>0.1.0</react.version>
    <core.version>1.0.0-SNAPSHOT</core.version>
    <preferences.version>1.0.0-SNAPSHOT</preferences.version>
    <explorer.version>1.0.0-SNAPSHOT</explorer.version>
    <items.version>1.0.0-SNAPSHOT</items.version>
    <describedPanel.version>1.0.0-SNAPSHOT</describedPanel.version>
    <being.version>1.0.0-SNAPSHOT</being.version>
    <rules.version>1.0.0-SNAPSHOT</rules.version>
    <rulesUI.version>1.0.0-SNAPSHOT</rulesUI.version>
  </properties>
</project>

